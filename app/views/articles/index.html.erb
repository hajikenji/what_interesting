<p id="notice"><%= notice %></p>

<% if params[:value] != "all_time_ranking" %>
  <h1>24時間ランキング</h1>
  <%= link_to '総合ランキング', articles_path(value: "all_time_ranking") %>
<% elsif params[:value] != "24hour_time_ranking" %>
  <h1>総合ランキング</h1>
  <%= link_to '24時間ランキング', articles_path(value: "24hour_time_ranking") %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Icon</th>
      <th>value</th>
      <th>Ranking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article.link %></td>
        <td><%= article.icon %></td>
        <td><%= article.article_statistic.fav %></td>
        <td><%= article.ranking %></td>
        <td><%= link_to 'コメント一覧', new_article_comment_path(article) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
