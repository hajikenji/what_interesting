<!DOCTYPE html>
<html>
  <head>
    <title>WhatInteresting</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="for_bottom_footer" >
  <div id = "header", class="navbar navbar-expand-lg navbar-light bg-light bg-dark">
    <div>
      <%= link_to "記事ランキングへ", articles_path %>
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        <%= link_to "マイページ", my_user_path(current_user) %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path %>
        <%= link_to "ログイン", new_user_session_path %>
        <%= link_to "ゲストユーザー", my_user_path("guest") %>
        <%= link_to "ゲスト管理者", my_user_path("admin") %>
      <% end %>
    </div>
  </div>
  <ul>
    <li id = "for_margin_li"></li>
    </ul>


  <% if notice %>
    <p class="alert alert-notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
  <% end %>
  <div class = "yield">
    <%= yield %>
  </div>
    
  <footer class="py-3 my-4 border-top">
    <p class="text-muted">© 2022 Company, Inc what_interesting</p>

  </footer>
  
  </div>
  </body>
</html>
