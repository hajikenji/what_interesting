<div id = "mypage">
<h2>マイページ</h2>
<%= current_user.name %>
<%= current_user.email %>
<div class="image">
  <%= image_tag "default.png", class: "default" %>
</div>
<%= form_with(model: [:my, @user],local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-outline-success" %>
  </div>

<% end %>
<div>
  <%= button_to "退会する", user_registration_path, {method: :delete, class: "btn btn-outline-success"} %>
</div>

<% if current_user.admin? %>
  <div>
    <%= link_to '管理者', rails_admin_path %>
  </div>
  <div>
    <%= link_to 'New Article', new_article_path %>
  </div>
<% end %>
</div>